{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "dom"],
    "types": ["node", "express"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
