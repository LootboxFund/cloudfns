{
  "functions": {
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": [
    {
      "target": "staging",
      "public": "hosting/public/staging",
      "ignore": [
        "firebase.json",
        "functions/**",
        "**/.*",
        "**/node_modules/**"
      ],
      "project": "lootbox-fund-staging",
      "rewrites": [
        {
          "source": "/join",
          "destination": "/join/index.html"
        },
        {
          "source": "/join/**",
          "destination": "/join/index.html"
        },
        {
          "source": "/host",
          "destination": "/host/index.html"
        },
        {
          "source": "/host/**",
          "destination": "/host/index.html"
        },
        { "source": "/profile", "destination": "/profile.html" },
        {
          "source": "/earn",
          "destination": "/redeemCosmicLootbox.html"
        },
        {
          "source": "/my-tickets",
          "destination": "/myTickets.html"
        },
        {
          "source": "/user",
          "destination": "/publicProfile.html"
        },
        {
          "source": "/onboard",
          "destination": "/linkAnon.html"
        },
        {
          "source": "/logout",
          "destination": "/logout.html"
        },
        {
          "source": "**",
          "destination": "/viralOnboarding.html"
        }
      ]
    },
    {
      "target": "prod",
      "public": "hosting/public/prod",
      "ignore": [
        "firebase.json",
        "functions/**",
        "bigquery/**",
        "**/.*",
        "**/node_modules/**"
      ],
      "project": "lootbox-fund-prod",
      "rewrites": [
        {
          "source": "/join",
          "destination": "/join/index.html"
        },
        {
          "source": "/join/**",
          "destination": "/join/index.html"
        },
        {
          "source": "/host",
          "destination": "/host/index.html"
        },
        {
          "source": "/host/**",
          "destination": "/host/index.html"
        },
        {
          "source": "/profile",
          "destination": "/profile.html"
        },
        {
          "source": "/earn",
          "destination": "/redeemCosmicLootbox.html"
        },
        {
          "source": "/my-tickets",
          "destination": "/myTickets.html"
        },
        {
          "source": "/user",
          "destination": "/publicProfile.html"
        },
        {
          "source": "/onboard",
          "destination": "/linkAnon.html"
        },
        {
          "source": "/logout",
          "destination": "/logout.html"
        },
        {
          "source": "**",
          "destination": "/viralOnboarding.html"
        }
      ]
    }
  ]
}
