{
    "name": "functions",
    "scripts": {
        "codegen": "graphql-codegen --config codegen.yml",
        "lint": "eslint --ext .js,.ts .",
        "build": "tsc ",
        "build:watch": "tsc --watch",
        "serve": "yarn run build && firebase emulators:start --only functions",
        "shell": "yarn run build && firebase functions:shell",
        "start": "yarn run shell",
        "deploy:staging": "yarn install && yarn codegen && yarn run build && firebase deploy --only functions --project lootbox-fund-staging",
        "deploy:prod": "yarn install && yarn codegen && yarn run build && firebase deploy --only functions --project lootbox-fund-prod",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "16"
    },
    "main": "lib/index.js",
    "dependencies": {
        "@ffmpeg-installer/ffmpeg": "^1.1.0",
        "@google-cloud/video-transcoder": "^2.2.2",
        "@types/fluent-ffmpeg": "^2.1.20",
        "@types/mkdirp": "^1.0.2",
        "@wormgraph/helpers": "0.7.0-prod-1",
        "@wormgraph/manifest": "0.7.0-prod-6",
        "axios": "^1.1.2",
        "ethers": "^5.7.1",
        "ffmpeg-static": "^5.1.0",
        "firebase-admin": "^10.0.2",
        "firebase-functions": "^3.23.0",
        "fluent-ffmpeg": "^2.1.2",
        "mkdirp": "^1.0.4",
        "mkdirp-promise": "^5.0.1",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^2.6.2",
        "@graphql-codegen/typescript": "^2.4.11",
        "@graphql-codegen/typescript-resolvers": "^2.6.4",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "eslint": "^8.9.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.2.1",
        "firebase-functions-test": "^0.2.0",
        "graphql": "^16.5.0",
        "prettier": "^2.7.1",
        "typescript": "^4.5.4"
    },
    "private": true
}
